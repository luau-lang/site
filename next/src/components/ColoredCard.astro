---
import { Icon } from '@astrojs/starlight/components';
import type { StarlightIcon } from '@astrojs/starlight/types';

interface Props {
  icon?: StarlightIcon;
  title: string;
  color?: string;
}

const { icon, title, color } = Astro.props;
---

<article class:list={["card sl-flex card-colored", "card-bg-" + color]}>
	<p class="title sl-flex">
		{icon && <Icon name={icon} class:list={["icon", "icon-" + color]} size="1.333em" />}
		<span set:html={title} />
	</p>
	<div class="body"><slot /></div>
</article>

<style>
	@layer starlight.components {
	    .card-colored {
			--sl-color-text-accent: var(--color-blue-300);
			--sl-color-text: var(--color-white);
			color: var(--sl-color-text);
		}
	    .card-colored.card-bg-red {
			background-color: var(--color-red);
			--sl-card-border: var(--color-red-400);
			--sl-card-bg: var(--color-red-800);
		}
		.card-colored.card-bg-blue {
		    background-color: var(--color-blue);
			--sl-card-border: var(--color-accent-400);
			--sl-card-bg: var(--color-accent-800);
		}
		.card-colored.card-bg-yellow {
    		background-color: var(--color-orange);
            --sl-card-border: var(--color-orange-400);
			--sl-card-bg: var(--color-orange-800);
		}
		.card-colored.card-bg-green {
            background-color: var(--color-green);
            --sl-card-border: var(--color-green-400);
			--sl-card-bg: var(--color-green-800);
		}
		.card-colored.card-bg-purple {
		    background-color: var(--color-purple);
			--sl-card-border: var(--color-purple-400);
			--sl-card-bg: var(--color-purple-800);
		}
		.card-colored.card-bg-pink {
		    background-color: var(--color-pink);
			--sl-card-border: var(--color-pink-400);
			--sl-card-bg: var(--color-pink-800);
		}
		.card {
            border-radius: 0.5em;
			--sl-card-border: var(--sl-color-purple);
			--sl-card-bg: var(--sl-color-purple-low);
			border: 1px solid var(--sl-color-gray-5);
			background-color: var(--sl-color-black);
			padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
			flex-direction: column;
			gap: clamp(0.5rem, calc(0.125rem + 1vw), 1rem);
		}
		.title {
			font-weight: 600;
			font-size: var(--sl-text-h4);
			color: var(--sl-color-text);
			line-height: var(--sl-line-height-headings);
			gap: 1rem;
			align-items: center;
		}
		.card .icon {
			border: 1px solid var(--sl-card-border);
			background-color: var(--sl-card-bg);
			padding: 0.2em;
			border-radius: 0.25rem;
			flex-shrink: 0;
		}
		.card .body {
			margin: 0;
			font-size: clamp(var(--sl-text-sm), calc(0.5rem + 1vw), var(--sl-text-body));
		}
	}
</style>
