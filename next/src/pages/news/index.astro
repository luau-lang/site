---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import { getCollection } from 'astro:content'
import '../../styles/news-index.css';

let allNews = await getCollection('news')
allNews = allNews.sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());
---

<StarlightPage
  frontmatter={{ title: 'News', template: 'splash' }}
  hasSidebar={false}
>
  <div class="news-header">
    <p class="news-intro">The latest news from the Luau team! Stay up to date with new features, performance improvements, and language updates.</p>
  </div>

  <div class="news-list">
    {allNews.map((post) => {
      const href = `/news/${post.id}`;
      return (
        <a href={href} class="post-card">
          <h2>{post.data.title}</h2>
          <span class="post-date">{new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
        </a>
      )
    })}
  </div>
</StarlightPage>
